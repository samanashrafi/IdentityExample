    @Html.Partial("_Edit")

@*}*@

<script src="~/media/admin/js/plugins/dropzone/dropzone.js"></script>
@section scriptfooter{
    @*<script src="~/media/admin/js/AjaxForm/jquery.form.min.js"></script>*@
    <script type="text/javascript">

        var SubFreeContent_data = "@Url.Action("data")/@Model.Id";
        var SubFreeContent_create = "@Url.Action("create")";
        var SubFreeContent_delete = "@Url.Action("delete")";
        var SubFreeContent_Edit = "@Url.Action("Edit")";
        var SubFreeContent_multidelete = "@Url.Action("multiDelete")";

    </script>
    <script src="~/media/admin/js/views/SubFreeContent.js"></script>
}


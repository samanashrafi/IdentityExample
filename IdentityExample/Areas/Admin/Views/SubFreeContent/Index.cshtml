
@using IdentityExample.DomainClasses
@model IdentityExample.DomainClasses.FreeContent

@{
    ViewBag.Title = "Index";
    //List<SubFreeContent> subFreeContentModel = ViewBag.SubFreeContent;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section breadcrumbhead{
    نام زیر محتوا

}
@{

}
@section breadcrumb{
    <li>
        <a> زیر محتوای آزاد</a>
    </li>
    <li class="active">
        <strong>@Model.Title</strong>
    </li>
}
<div class="row wrapper wrapper-content animated fadeInRight">

    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <div class="ibox-tools">
                    <a href="#" data-toggle="modal" data-target="#myModal">
                        <i class="fa fa-plus" data-toggle="tooltip" data-placement="top" title="زیر محتوای جدید"></i>
                    </a>
                    <a id="SubFreeContent-MultiDelete">
                        <i class="fa fa-trash" data-toggle="tooltip" data-placement="top" title="حذف گروهی"></i>
                    </a>
                    <a class="Edit-Modal display-none-important" data-toggle="modal" data-target="#Edit-Modal">
                        <i class="fa fa-pencil" data-toggle="tooltip" data-placement="top" title=""></i>
                    </a>
                    <a id="SearchShow" data-toggle="tooltip" data-placement="top" title="جستجو">
                        <i class="fa fa-search"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <table id="SubFreeContent-grid" class="table table-condensed table-hover table-striped">
                    <thead>
                        <tr>
                            <th data-column-id="Id" data-type="numeric" data-identifier="true">کد</th>
                            <th data-column-id="Title">عنوان</th>
                            <th data-column-id="MetaKeyword">کلمات کلیدی</th>
                            <th data-column-id="MetaDescription">توضیحات صفحه</th>
                            <th data-column-id="btn_SubFreeContent" data-formatter="btn_SubFreeContent" data-sortable="false">عملیات</th>
                        </tr>
                </table>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="FreeContentId" name="FreeContentId" value="@Model.Id" />

@Html.Partial("_Create", Model.Id)
@*@if (subFreeContentModel != null)

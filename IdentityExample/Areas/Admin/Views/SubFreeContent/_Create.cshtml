@model int
@Html.BeginForm("Create", "SubFreeContent", FormMethod.Post, new { id = "reg-SubFreeContent",onsubmit="return false" , name = "reg_SubFreeContent", enctype = "multipart/form-data" })
{
<div class="modal inmodal" id="myModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <i class="fa fa-pencil modal-icon"></i>
                <h4 class="modal-title">ایجاد زیر‌محتوا آزاد</h4>
            </div>
            <div class="modal-body">
                <input type="hidden" id="FreeContentId" name="FreeContentId" value="@Model" />

                <div class="form-group">
                    <label>عنوان فارسی</label>

                    <div class="fg-line">
                        <input id="Title" name="Title" type="text" placeholder="لطفا عنوان فارسی را وارد فرمایید..." class="form-control">
                        <label id="Title-error" for="Title" class="has-error has-feedback check_valid display-none"></label>

                    </div>

                </div>

                <div class="form-group">
                    <label>عنوان انگلیسی</label>
                    <div class="fg-line">
                        <input id="TitleEn" name="TitleEn" type="text" placeholder="لطفا عنوان انگلیسی را وارد فرمایید..." class="form-control">
                        <label id="TitleEn-error" for="TitleEn" class="has-error has-feedback check_valid display-none"></label>

                    </div>
                </div>
               
                <div class="form-group">
                    <label>اولویت</label>
                    <div class="fg-line">
                        <input id="Priority" name="Priority" type="text" placeholder="لطفا اولویت زیر‌محتوا را وارد فرمایید." class="form-control">
                        <label id="Priority-error" for="Priority" class="has-error has-feedback check_valid display-none"></label>

                    </div>
                </div>
                <div class="form-group">
                    <label>کلمات کلیدی</label>
                    <div class="fg-line">
                        <textarea id="MetaKeyword" name="MetaKeyword" type="text" placeholder="مثال : کلمه کلیدی شما، کلمه کلیدی شما" class="form-control" rows=" 4" cols="30"></textarea> 
                        <label id="MetaKeyword" for="MetaKeyword" class="has-error has-feedback check_valid display-none"></label>

                    </div>
                </div>
                <div class="form-group">
                    <label>عنوان صحفه</label>
                    <div class="fg-line">
                        <input id="PageTitle" name="PageTitle" type="text" placeholder="لطفا عنوان صحفه را وارد فرمایید." class="form-control">
                        <label id="PageTitle-error" for="PageTitle " class="has-error has-feedback check_valid display-none"></label>

                    </div>
                </div>
               

                <div class="form-group">
                    <label>توضیحات صحفه</label>
                    <div class="fg-line">
                           <textarea id="MetaDescription" name="MetaDescription" type="text" placeholder="لطفا توضیحات کوتاه زیر‌محتوا را وارد فرمایید. " class="form-control" rows="4" cols="30"></textarea> 
                        <label id="MetaDescription-error" for="MetaDescription" class="has-error has-feedback check_valid display-none"></label>

                    </div>
                </div>
                <div class="form-group">
                    <label>توضیحات بلند</label>
                    <div class="fg-line">
                        <textarea id="LongDescription" name="LongDescription" type="text" placeholder="لطفا توضیحات بلند زیر‌محتوا را وارد فرمایید. " class="form-control" rows="4" cols="30"></textarea> 
                        <label id="LongDescription-error" for="LongDescription" class="has-error has-feedback check_valid display-none"></label>

                    </div>
                </div>
                <div class="form-group">
               
                    <div class="checkbox checkbox-success">
                        <input type="checkbox" id="Condition" name="Condition" value="false" aria-label="Single checkbox Two">
                        <label></label>
                        <span class="m-r-md">قابل نمایش</span>
                    </div>
                </div>
                <div class="form-group">
                    <label>بارگذاری عکس</label>
                    <div class="fg-line">
                        <input id="Image" name="postedFile" type="file">

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a id="clear-reg-SubFreeContent" class="btn btn-danger btn-clear">پاک کردن</a>
                <button id="SubFreeContent-create" type="submit" class="btn btn-primary free-content-save">ذخیره</button>
            </div>

        </div>
    </div>
</div>
}




@Html.BeginForm("Create", "FreeContent", FormMethod.Post, new { id = "reg-free-content", name = "reg_free_content" , enctype = "multipart/form-data" })
{
<div class="modal inmodal" id="myModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <i class="fa fa-pencil modal-icon"></i>
                <h4 class="modal-title">ایجاد محتوا آزاد</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>عنوان فارسی</label>

                    <div class="fg-line">
                        <input id="Title" name="Title" type="text" placeholder="لطفا عنوان فارسی را وارد فرمایید..." class="form-control">
                        <label id="Title-error" for="Title" class="has-error has-feedback check_valid display-none"></label>

                    </div>

                </div>

                <div class="form-group">
                    <label>عنوان انگلیسی</label>
                    <div class="fg-line">
                        <input id="TitleEn" name="TitleEn" type="text" placeholder="لطفا عنوان انگلیسی را وارد فرمایید..." class="form-control">
                        <label id="TitleEn-error" for="TitleEn" class="has-error has-feedback check_valid display-none"></label>

                    </div>
                </div>
                <div class="form-group">
                    <label>نوع محتوای آزاد</label>
                    <div class="fg-line">
                        <input id="Type" name="Type" type="text" placeholder="لطفا نوع محتوا را وارد فرمایید..." class="form-control">
                        <label id="Type-error" for="Type" class="has-error has-feedback check_valid display-none"></label>

                    </div>
                </div>
                <div class="form-group">
                    <label>اولویت</label>
                    <div class="fg-line">
                        <input id="Priority" name="Priority" type="text" placeholder="لطفا اولویت محتوا را وارد فرمایید." class="form-control">
                        <label id="Priority-error" for="Priority" class="has-error has-feedback check_valid display-none"></label>

                    </div>
                </div>
                @*<div class="form-group">
               
                    <div class="checkbox checkbox-success">
                        <input type="checkbox" id="Condition" name="Condition" value="0" aria-label="Single checkbox Two">
                        <label></label>
                        <span class="m-r-md">قابل نمایش</span>
                    </div>
                </div>*@

                @*<div class="form-group">
                    <label>بارگذاری عکس</label>
                    <div class="fg-line">
                        <input id="Image" name="Image" type="file">

                    </div>
                </div>*@
            </div>
            <div class="modal-footer">
                <a id="clear-reg-free-content" class="btn btn-danger btn-clear">پاک کردن</a>
                <button id="free-content-create" type="submit" class="btn btn-primary Free-Content-save">ذخیره</button>
            </div>

        </div>
    </div>
</div>
}


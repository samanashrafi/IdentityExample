@model List<IdentityExample.DomainClasses.SubFreeContent>

@{
    ViewBag.Title = "Services";
    Layout = "";

}


<section id="whe-here" class="container-width  margin-tb">
    <div class="container">
        <div class="row ">
            <h2 class="color-1 header-h2 text-center">آخرین مطالب</h2>

            @foreach (var item in Model)
            {
                <article class="col-md-4 col-sm-4">
                    <div class="news-layout transition">
                        @*~/post/@item.Id*@
                        <h4 >
                            @item.Title
                        </h4>
                        <p>
                            @item.ShortDescription
                        </p>
                        <a href="/details/@item.Id" class="transition">
                            ادامه
                        </a>
                    </div>
                </article>
            }
            <div class="col-md-12 col-sm-12">
                <a href="List/AreaList" class="button">
                    <span> تمام محله ها</span>
                </a>
            </div>
        </div>
    </div>

</section>
